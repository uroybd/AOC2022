#!/bin/sh
cargo test --lib -r output_day -- -Zunstable-options --report-time --test-threads=1 --format json > tests.json
markdown-test-report -nvpd tests.json
cat README_main.md > README.md
cat tests.md | sed '/^<!--more-->$/d' | sed '/^\# Index$/d' | sed 's/\# /\#\# /g' >> README.md
rm tests.json tests.md
git add README.md